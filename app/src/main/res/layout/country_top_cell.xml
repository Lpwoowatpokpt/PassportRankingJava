<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="@dimen/room_status_cell_width"
    android:layout_height="@dimen/room_status_cell_height">

    <ImageView
        android:layout_margin="2dp"
        android:id="@+id/passportCoverImg"
        android:layout_alignParentStart="true"
        android:layout_width="38dp"
        android:layout_height="48dp"
        android:contentDescription="@string/app_name"/>

    <TextView
        android:id="@+id/countryNameTxt"
        android:text="@string/country_long_blank"
        android:layout_centerInParent="true"
        android:textSize="14sp"
        android:layout_above="@+id/mobilityScoreTxt"
        android:layout_toEndOf="@id/passportCoverImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/mobilityScoreTxt"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/passportCoverImg"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textSize="12sp"
        tools:ignore="SmallSp" />

    <View
        android:background="@color/cell_border_color"
        android:layout_alignParentEnd="true"
        android:layout_width="1dp"
        android:layout_height="match_parent" />

    <View
        android:background="@color/cell_border_color"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp" />


</RelativeLayout>